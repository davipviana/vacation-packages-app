<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.PurchaseSummaryActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp" app:srcCompat="@android:color/holo_orange_dark"
            android:id="@+id/purchase_summary_banner" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Parabéns!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_congratulation_message" app:layout_constraintStart_toStartOf="@+id/purchase_summary_banner"
            app:layout_constraintEnd_toEndOf="@+id/purchase_summary_banner" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/purchase_summary_banner" app:layout_constraintBottom_toBottomOf="@+id/purchase_summary_banner"
            android:textColor="@android:color/white" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Compra realizada com sucesso :)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_success_message"
            app:layout_constraintEnd_toEndOf="@+id/purchase_summary_congratulation_message"
            app:layout_constraintStart_toStartOf="@+id/purchase_summary_congratulation_message"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_congratulation_message"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    <TextView
            android:text="Confira o resumo da compra:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_tutorial" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_banner" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/sao_paulo_sp"
            android:id="@+id/purchase_summary_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_tutorial"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_local" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_image" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="São Paulo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_date" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_local" app:layout_constraintStart_toStartOf="@+id/purchase_summary_local"
            tools:text="08/12 - 10/12 de 2017"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase_summary_price" app:layout_constraintStart_toStartOf="@+id/purchase_summary_date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_date" tools:text="R$ 243,99"/>
</android.support.constraint.ConstraintLayout>