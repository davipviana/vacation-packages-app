<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/purchase_summary_banner"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:contentDescription="@string/banner"
            app:srcCompat="@android:color/holo_orange_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/purchase_summary_congratulation_message"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchase_summary_congratulation_message"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/purchase_summary_banner"
            app:layout_constraintEnd_toEndOf="@+id/purchase_summary_banner"
            app:layout_constraintTop_toTopOf="@+id/purchase_summary_banner"
            app:layout_constraintBottom_toBottomOf="@+id/purchase_summary_banner"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/purchase_summary_success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/purchase_summary_success_message"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/purchase_summary_congratulation_message"
            app:layout_constraintStart_toStartOf="@+id/purchase_summary_congratulation_message"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_congratulation_message"/>

    <TextView
            android:id="@+id/purchase_summary_tutorial"
            android:text="@string/purchase_summary_tutorial_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:id="@+id/purchase_summary_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/package_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_tutorial"
            tools:srcCompat="@drawable/sao_paulo_sp"/>

    <TextView
            android:id="@+id/purchase_summary_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="SÃ£o Paulo"/>

    <TextView
            android:id="@+id/purchase_summary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_local"
            app:layout_constraintStart_toStartOf="@+id/purchase_summary_local"
            tools:text="08/12 - 10/12 de 2017"/>

    <TextView
            android:id="@+id/purchase_summary_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/purchase_summary_date"
            app:layout_constraintTop_toBottomOf="@+id/purchase_summary_date"
            tools:text="R$ 243,99"/>

</android.support.constraint.ConstraintLayout>