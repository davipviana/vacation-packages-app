<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/packages_banner"
            android:contentDescription="@string/banner"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:srcCompat="@android:color/holo_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"/>

    <TextView
            android:id="@+id/packages_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/type"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/packages_banner"
            app:layout_constraintTop_toTopOf="@id/packages_banner"
            app:layout_constraintEnd_toEndOf="@id/packages_banner"
            app:layout_constraintBottom_toBottomOf="@id/packages_banner"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

    <TextView
            android:id="@+id/packages_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/country"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/packages_type"
            app:layout_constraintTop_toBottomOf="@+id/packages_type"/>

    <ListView
            android:id="@+id/packages_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/packages_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/package_item"/>
</android.support.constraint.ConstraintLayout>